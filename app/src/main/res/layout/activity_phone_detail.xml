<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/detail_top" />

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/top_bar_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_white" />


        <ImageView
            android:id="@+id/phone_detail_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/circle"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/example_mask" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/phone_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="홍길동"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/font_color"
            android:textSize="23sp" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/phone_detail_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="박사"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/main_color"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/phone_detail_major"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:text="산업디자인과 주전공\n수리학과 부전공"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/font_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail_email"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp" />
                <TextView
                    android:id="@+id/phone_detail_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="January 1st, 1990"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pretendard_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail_home"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp" />
                <TextView
                    android:id="@+id/phone_detail_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seoul, Korea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pretendard_regular"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail_call"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"/>
                <TextView
                    android:id="@+id/phone_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="010-1234-1234"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pretendard_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail_calendar"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/phone_detail_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bakdonal@kaist.ac.kr"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pretendard_regular"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="#1B262C" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:id="@+id/phone_detail_intro"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="안녕하세요, 랩에서 산업디자인과 주전공과 수리학과 부전공을 하고 있는 홍길동입니다."
                android:lineSpacingExtra="4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/pretendard_regular"/>

            <TextView
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Education"
                android:textSize="18sp"
                android:lineSpacingExtra="4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingStart="15dp"
                android:gravity="start"
                android:padding="5dp"
                android:textColor="@color/font_color"
                android:fontFamily="@font/pretendard_medium"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="25dp"
                android:background="@color/detail_color" />
            <!--경력-->
            <TextView
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/phone_detail_edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="경기고등학교 졸업\n서울대학교 졸업\n- 기계공학과 주전공\n- 산업디자인과 복수전공\n- 4.20/4.5 GPA"
                android:textColor="@color/font_color"
                android:lineSpacingExtra="1dp"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:layout_marginBottom="25dp"/>

        <TextView
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Work Experience"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingStart="15dp"
            android:gravity="start"
            android:padding="5dp"
            android:textColor="@color/font_color"
            android:fontFamily="@font/pretendard_medium"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="25dp"
            android:background="@color/detail_color" />

            <TextView
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/phone_detail_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="경기고등학교 졸업\n서울대학교 졸업\n- 기계공학과 주전공\n- 산업디자인과 복수전공\n- 4.20/4.5 GPA"
                android:textColor="@color/font_color"
                android:lineSpacingExtra="1dp"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>