<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ✅ 전체 상단바 카드뷰 (기존처럼 유지) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/background">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <!-- ← 버튼 -->
            <ImageView
                android:id="@+id/top_bar_arrow_ver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_black"
                android:paddingHorizontal="15dp"
                android:layout_gravity="left|center_vertical"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <!-- 상단 텍스트 -->
            <TextView
                android:id="@+id/top_bar_text_ver2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:text="식재료"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="22dp"
                android:textColor="#080808" />

            <!-- 검색 아이콘 -->
            <ImageView
                android:id="@+id/top_bar_search_ver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/top_bar_search"
                android:paddingHorizontal="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="70dp"
                android:scaleType="fitCenter"
                android:visibility="visible" />

            <!-- 카트 + 팝업 트리거 -->
            <ImageView
                android:id="@+id/top_bar_cart_ver2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="75dp"
                app:srcCompat="@drawable/cart"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <!-- 알림 아이콘 -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/top_bar_bell_ver2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bell"
                    android:paddingHorizontal="8dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/notificationNumber_ver2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:text="4"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle_red"
                    android:paddingTop="1dp"
                    android:textAlignment="center"
                    android:textSize="6sp"
                    android:textColor="@color/background2"
                    android:fontFamily="@font/pretendard_semibold" />
            </FrameLayout>

            <!-- 냉장고 아이콘 -->
            <ImageView
                android:id="@+id/top_bar_person_ver2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/fridge_ver2"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitCenter" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- ✅ 팝업은 상단바 바깥, FrameLayout의 맨 아래쪽에 배치 (오버레이) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cartPopupCard"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="75dp"
        android:visibility="gone"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>
