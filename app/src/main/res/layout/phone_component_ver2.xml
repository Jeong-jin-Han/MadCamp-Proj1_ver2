        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ✅ 선은 수직으로 구분되어야 하므로 여기로 이동 -->
            <View
                android:id="@+id/linetop_ver2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                android:visibility="gone" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="2dp">

                <ImageView
                    android:id="@+id/phone_component_image_ver2"
                    android:background="@drawable/circle"
                    android:clipToOutline="true"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/soy"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 이름 -->
                    <TextView
                        android:id="@+id/phone_component_name_ver2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:textSize="17sp"
                        android:textColor="@color/font_color"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="달걀"/>

                    <!-- 유통기한 -->
                    <TextView
                        android:id="@+id/phone_component_status_ver2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/main_color"
                        android:fontFamily="@font/pretendard_light"
                        android:text="유통기한 미입력"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end"
                    android:layout_marginEnd="35dp"
                    android:gravity="end">

                    <!-- "개수" 라벨 -->
                    <TextView
                        android:id="@+id/phone_component_name_2_ver2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:paddingTop="5dp"
                        android:text="개수"
                        android:textColor="@color/font_color"
                        android:textSize="17sp" />

                    <!-- 개수 값 -->
                    <TextView
                        android:id="@+id/phone_component_status_2_ver2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_light"
                        android:text="20개"
                        android:textColor="@color/main_color"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_component_more_ver2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:gravity="center">

                <ImageView
                    android:id="@+id/phone_call_ver2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/calendar_fail"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/phone_message_ver2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/plus"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/phone_info_ver2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/minus"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/phone_location_ver2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/icon_location"
                    android:scaleType="centerInside" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>