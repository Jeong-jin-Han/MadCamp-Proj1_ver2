<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <!--기본값은 안 보이지만, 특정 화면에만 보일 수 있도록 visibility 속성 추가 -->
        <ImageView
            android:id="@+id/top_bar_arrow_ver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_black"
            android:paddingHorizontal="15dp"
            android:layout_gravity="left|center_vertical"
            android:scaleType="fitCenter"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/top_bar_text_ver2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:text="식재료"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="22dp"
            android:textColor="#080808"/>

        <ImageView
            android:id="@+id/top_bar_search_ver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/top_bar_search"
            android:paddingHorizontal="15dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="70dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_gravity="right|center_vertical"
            >


            <ImageView
                android:id="@+id/top_bar_bell_ver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bell"

                android:paddingHorizontal="8dp"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/notificationNumber_ver2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:text="4"

                android:layout_marginLeft="20dp"
                android:background="@drawable/circle_red"
                android:paddingTop="1dp"

                android:textAlignment="center"
                android:textSize="6sp"
                android:textColor="@color/background2"
                android:fontFamily="@font/pretendard_semibold"
                />


        </FrameLayout>

        <ImageView
            android:id="@+id/top_bar_person_ver2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/fridge_ver2"
            android:layout_marginLeft="5dp"
            android:layout_gravity="right|center_vertical"
            android:scaleType="fitCenter"
            />


    </FrameLayout>
</androidx.cardview.widget.CardView>