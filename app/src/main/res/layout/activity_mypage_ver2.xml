<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/detail_top" />

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/top_bar_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_white" />


        <ImageView
            android:id="@+id/phone_detail_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circle"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/example_mask" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/phone_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="홍길동"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/font_color"
            android:textSize="23sp" />

        <TextView
            android:layout_marginLeft="6dp"
            android:id="@+id/phone_detail_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="교수"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/main_color"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/phone_detail_major"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:text="카이스트\n컴퓨터공학과"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/font_color"
        android:textSize="14sp" />

    <!--구분선-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="#B9B9B9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
